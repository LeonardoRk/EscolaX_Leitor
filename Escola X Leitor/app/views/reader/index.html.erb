

<form>
  <div class="form-group" style="width:15%; margin:0 auto;" >
    <%= form_tag(alumns_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Busca aluno", autofocus: true %>
        <%= submit_tag "Search", :name => nil %>
    <% end %>
  </div>
</form>
<img src="home/leonardo/Área%20de%20Trabalho/PastaEscolaX/EscolaX_Leitor/Escola%20X%20Leitor/app/assets/images/escola.jpg" class="img-responsive" alt="Escola do Gama">

<% if @alumns.blank? %>
  <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% else %>
  <% @alumns.each do |alumn| %>
  <p>
    <%= alumn.name %><br>
    <%= alumn.registry %>
  </p>
  <% end %>
<% end %>
